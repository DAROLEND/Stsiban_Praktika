@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Магазин квітів";
}

<h3>Квіти в наявності</h3>
<table>
    <tr>
        <th>Назва</th>
        <th>Колір</th>
        <th>Ціна</th>
        <th></th>
    </tr>
    @foreach (var f in ViewBag.Flowers)
    {
        <tr>
            <td>@f.Title</td>
            <td>@f.Color</td>
            <td>@f.Price грн</td>
            <td>
                <a href="@Url.Action("Buy", "Flower", new { id = f.Id })">Оформити покупку</a>
            </td>
        </tr>
    }
</table>
